<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="60dp"
    android:background="@drawable/float_window_chat_bg"
    android:orientation="horizontal"
    android:padding="8dp"
    android:elevation="12dp">

    <!-- 应用图标 -->
    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="centerCrop"
        android:background="@drawable/float_window_icon_bg"
        android:padding="2dp" />

    <!-- 内容区域 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <!-- 标题和时间 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 标题 -->
            <TextView
                android:id="@+id/float_window_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Fun自动转发"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold" />

            <!-- 状态圆点 -->
            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/float_window_chat_status_dot" />

        </LinearLayout>

        <!-- 内容文本 -->
        <TextView
            android:id="@+id/float_window_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="正在后台运行中"
            android:textColor="#666666"
            android:textSize="13sp"
            android:singleLine="true"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- 关闭按钮 -->
    <ImageView
        android:id="@+id/close_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_close_float_window"
        android:scaleType="centerCrop"
        android:background="@drawable/float_window_close_bg"
        android:padding="4dp" />

</LinearLayout>