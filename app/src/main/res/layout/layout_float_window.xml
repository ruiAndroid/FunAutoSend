<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="80dp"
    android:background="@drawable/float_window_bg"
    android:orientation="vertical"
    android:padding="8dp"
    android:elevation="10dp">

    <!-- 标题栏 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 图标 -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop" />

        <!-- 标题 -->
        <TextView
            android:id="@+id/float_window_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fun自动转发服务"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="8dp" />

        <!-- 关闭按钮 -->
        <ImageView
            android:id="@+id/close_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close_float_window"
            android:scaleType="centerCrop" />

    </LinearLayout>

    <!-- 内容区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:orientation="vertical">

        <!-- 内容文本 -->
        <TextView
            android:id="@+id/float_window_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在后台运行中"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />

        <!-- 服务状态指示 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 状态圆点 -->
            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/float_window_status_dot" />

            <!-- 状态文本 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务正常运行中"
                android:textColor="#FFFFFF"
                android:textSize="11sp"
                android:layout_marginLeft="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>