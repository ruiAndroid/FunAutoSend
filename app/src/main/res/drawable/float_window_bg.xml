<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景颜色，使用微信风格的绿色 -->
    <solid android:color="#07C160" />
    <!-- 圆角 -->
    <corners android:radius="12dp" />
    <!-- 边框 -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF"
        android:alpha="0.3" />
    <!-- 内边距 -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>