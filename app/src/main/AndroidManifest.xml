<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.funshion.funautosend">

    <!-- 发送短信权限 -->
    <uses-permission android:name="android.permission.SEND_SMS" />
    <!-- 读取联系人权限（用于选择短信接收者） -->
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!-- 互联网权限（用于发送邮件） -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 读取短信权限 -->
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <!-- 读取短信内容权限（Android 4.4及以上需要） -->
    <uses-permission android:name="android.permission.READ_SMS" />
    <!-- 读取手机状态权限（用于获取本机手机号） -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- Android 12及以上需要的权限 -->
    <uses-permission android:name="android.permission.READ_PHONE_NUMBERS" />
    
    <!-- 前台服务权限（Android 9.0+必需） -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!-- 后台启动前台服务权限（Android 12+可能需要） -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />
    
    <!-- 进程保活相关权限 -->
    <!-- 监听开机广播权限 -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <!-- 监听网络状态变化权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 忽略电池优化权限（可选，但有助于保活） -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />

    <!-- 悬浮窗权限 -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <!-- 监听屏幕状态变化权限 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <application
        android:name=".FunAutoSendApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config"
        android:directBootAware="true">
        
        <!-- 移除默认的WorkManager初始化器，因为我们在Application中实现了Configuration.Provider -->
        <provider
            android:name="androidx.startup.InitializationProvider"
            android:authorities="${applicationId}.androidx-startup"
            android:exported="false"
            tools:node="remove" />
        
        <!-- Explicitly disable MIDI services for this app to prevent system MidiService warnings -->
        <service
            android:name="android.media.midi.MidiDeviceService"
            android:enabled="false"
            android:exported="false" />
        <service
            android:name="android.media.midi.MidiReceiverService"
            android:enabled="false"
            android:exported="false" />
            
        <!-- 守护进程服务，运行在单独的进程中 -->
        <service
            android:name=".service.GuardianService"
            android:process=":guardian"
            android:enabled="true"
            android:exported="true" />
        
        <!-- 主Activity配置 -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- 1像素Activity，用于增强保活效果 -->
        <activity
            android:name=".activity.OnePixelActivity"
            android:exported="false"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:taskAffinity="com.funshion.funautosend.onepixel"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen" />
        
        <!-- 为高优先级通知配置的Activity -->
        <activity
            android:name=".activity.NotificationActionActivity"
            android:exported="true"
            android:theme="@android:style/Theme.NoDisplay" />
        
        <!-- 前台服务弹窗配置 -->
        <meta-data
            android:name="android.app.usage_stats_access" 
            android:resource="@xml/usage_stats_access" />

        <!-- 悬浮窗服务 -->
        <service
            android:name=".service.FloatWindowService"
            android:exported="true" 
            android:foregroundServiceType="dataSync">
        </service>
        
        <!-- 悬浮窗服务的重启广播接收器 -->
        <receiver
            android:name=".service.FloatWindowRestartReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="1000">
                <action android:name="com.funshion.funautosend.action.RESTART_FLOAT_WINDOW_SERVICE" />
                <action android:name="android.intent.action.SCREEN_ON" />
                <action android:name="android.intent.action.SCREEN_OFF" />
                <!-- 开机启动 -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <!-- 应用更新后自动重启 -->
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
            </intent-filter>
        </receiver>
        <!-- 短信接收广播接收器（静态注册） -->
        <receiver
            android:name=".SmsReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter android:priority="999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>
        
        <receiver android:name=".receiver.SmsSendStatusReceiver" android:enabled="true" android:exported="true">
            <intent-filter>
                <action android:name="SMS_SENT" />
            </intent-filter>
        </receiver>
        
        <!-- 短信转发前台服务 -->
        <service
            android:name=".service.SmsForwardService"
            android:exported="true"
            android:foregroundServiceType="dataSync">
        </service>
        
        <!-- JobScheduler保活服务 -->
        <service
            android:name=".service.KeepAliveJobService"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE" />
        
        <!-- 无声音乐播放服务 -->
        <service
            android:name=".service.AudioPlayerService"
            android:exported="false"
            android:foregroundServiceType="mediaPlayback" />
        
        <!-- 系统广播接收器（静态注册） -->
        <receiver
            android:name=".util.SystemBroadcastReceiver"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <!-- 开机广播 -->
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <!-- 屏幕解锁广播 -->
                <action android:name="android.intent.action.USER_PRESENT" />
                <!-- 应用更新广播 -->
                <action android:name="android.intent.action.PACKAGE_REPLACED" />
                <data android:scheme="package" />
                <!-- 自定义服务重启广播 -->
                <action android:name="com.funshion.funautosend.SERVICE_RESTART" />
            </intent-filter>
        </receiver>
    </application>

</manifest>